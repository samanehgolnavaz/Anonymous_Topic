@page
@model Anonymous_Topics.Pages.TopicsGridModel
@{
    Layout = "Shared/_Layout";
}

<div class="header">
    <h1>Topics</h1>
    <!-- Navigation and user information here -->
</div>


<div class="main">
    <div class="sidebar">
        <div class="subreddit-list">
            <h2>Topic Categories</h2>
            <ul>
                @foreach (var item in Model.Categories)
                {
                    <li>
                        <a href="#">
                            <i class="fas fa-layer-group"></i> @item.Name
                            @*        <span class="comment-count">
                        <i class="fas fa-comment"></i> 1234
                        </span>*@
                        </a>
                    </li>
                }
    
            </ul>
        </div>
    </div>

    <div class="post-list">
        @foreach (var item in Model.Topics)
        {

            <div class="post">
                <div class="post-title" style="font-weight:bolder">@item.Title</div>
                <div class="post-content">@item.Description</div>
                <div class="post-image">
                    <img src="~/images/@item.Image" alt="Post Image 1">
                </div>
                <div class="post-footer">
                    <i class="far fa-user"></i> Posted by u/example_user1 | 1000 upvotes
                    <i class="far fa-user">
                        <a class="btn btn-warning" asp-page="TopicCommentsGrid" asp-route-id="@item.Id">Details</a>
                    </i>

                    <span class="comment-count">
                        <i class="fas fa-comment"></i> 50 comments
                    </span>
                </div>
            </div>
        }

    </div>
</div>

<div class="footer">
</div>


@section Styles {
    <link rel="stylesheet" href="~/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    }