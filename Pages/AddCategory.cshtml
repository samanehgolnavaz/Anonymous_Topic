@page
@model Anonymous_Topics.Pages.AddCategoryModel
@{
    Layout = "Shared/_NewLayout";
    ViewData["Title"] = "CreateCategory";

}

<div class="container mt-5">
    <h2>Category Form</h2>
    @if (ViewData["errors"] is string error)
    {
        <div class="col-12 mb-3">
            <div class="alert alert-danger">
                @error
            </div>
                
        </div>
    }
    @if (ViewData["success"] is string success)
    {
        <div class="col-12 mb-3">
            <div class="alert alert-success">
                @success
            </div>

        </div>
    }
    <form method="post">
        <div class="mb-3">
            <label for="@Model.Name" class="form-label">Name:</label>
            <input type="text" class="form-control" asp-for="@Model.Name" placeholder="Enter Category Name">
            <span asp-validation-for="@Model.Name" class="text-danger"></span>


        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <div class="container mt-5">
        <h2>Categories Table Grid </h2>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
            
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.TopicCategories)

                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>

                    </tr>
                }
            </tbody>
        </table>
    </div>


</div>
